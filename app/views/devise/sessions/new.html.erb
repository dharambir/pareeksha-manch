<div class="container">
  <div class="row">
    <div class="col-lg-7 col-md-7">
      <img class="img-responsive" src="http://45.114.246.20/~patronsupport/image/students.jpg ">
    </div>
    <div class="col-lg-5 col-md-5">
      <div class="authform">
        <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :role => 'form'}) do |f| %>
          <h3>Welcome to Pareeksha Manch</h3>
          <p>Please login to access your account</p>
          <%= devise_error_messages! %>
          <div class="form-group">
            <%= f.email_field :email, :autofocus => true, class: 'form-control', :placeholder =>'Email Address' %>
          </div>
          <div class="form-group">
            <%- if devise_mapping.recoverable? %>
              <%= link_to "Forgot password?", new_password_path(resource_name), class: 'right' %>
            <% end -%>
            <%= f.password_field :password, class: 'form-control', :placeholder =>'Password' %>
          </div>
          <div class="form-group">
              <div class="row vertical-center">
                <div class="col-md-7">
                  <%= f.submit 'Sign in', :class => 'button btn btn-primary login-btn' %>
                  <%= link_to 'Sign up', new_registration_path(resource_name)  %>
                  </div>
                <div class="col-md-5">
                  <a class="" href="/users/sign_up">Forgot password?</a>
                </div>
              </div>
            </div>

          
          <% if devise_mapping.rememberable? -%>
              <div class="checkbox" style="width:150px">
                <label>
                  <%= f.check_box :remember_me %> Remember me
                </label>
              </div>
            <% end -%>
        <% end %>
      </div>
    </div>
  </div>
</div>

<style type="text/css">
  body , main{
    margin: 0px;
    background-color: #f6f6f6;
  }
  main{
    margin-top: 33px;
  }
  .vertical-center{
    display: flex;
    align-items: center;
  }
  .authform{
    max-width: 100%;
    min-height: 70vh;
    display: flex;
    align-items: center;
  }
  .authform form{
    border: none;
    background-color: transparent;
    box-shadow: none;
  }
  .authform h3{
    font-weight: bold;
  }
  .authform p{
    margin: 0px;
  }
  .authform h3, .authform p{
    color: #173378;
  }
  .authform .form-group{
    margin-top: 8%;
  }
  .authform .form-group input{
    border-radius: 50px;
    height: 45px;
    box-shadow: 0 2px 3px 0 rgba(0,0,0,.16),0 2px 5px 0 rgba(0,0,0,.12);
  }
  .authform .btn-primary.login-btn{
    width: 100px;
    height: 40px;
    background-color: #173378;
  }
  .authform a{
    color: #3e4244;
    text-decoration: none;
  }
  .authform a:hover{
    color: #3e4244;
    background-color: transparent;
  }
</style>